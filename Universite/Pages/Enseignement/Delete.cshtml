@page
@model Universite.Pages.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Enseigner</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Enseigner.LEnseignant)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Enseigner.LEnseignant.Nom)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Enseigner.LUE)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Enseigner.LUE.Intitule)
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="Enseigner.ID" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-page="./Index" asp-route-id="@Model.Enseigner.LEnseignantID">Retour à l'enseignant</a>
    </form>
</div>
